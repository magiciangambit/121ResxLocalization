<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestLocalizationNuget"
             x:Class="TestLocalizationNuget.MainPage" 
             xmlns:i18n="clr-namespace:Plugin._121ResxLocalization;assembly=Plugin._121ResxLocalization">

    <StackLayout>
        <Label Text="Resx Localization" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        <Label Text="{i18n:Translate NotesLabel}" />
        <Entry Placeholder="{i18n:Translate NotesPlaceholder}" />
        <Button Text="{i18n:Translate Text=AddButton}" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Button Text="Set as English" Clicked="OnButtonClicked" />
            <Button Text="Set as Spanish" Clicked="OnButtonClicked" />
        </StackLayout>

    </StackLayout>
	
</ContentPage>
